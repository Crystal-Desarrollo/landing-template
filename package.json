    "tailwindcss": "^3.4.4",
    "vite": "5.3.1"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.0",
    "@headlessui/tailwindcss": "^0.2.1",
    "@tabler/icons-react": "^3.11.0",
    "@tremor/react": "^3.17.4",
